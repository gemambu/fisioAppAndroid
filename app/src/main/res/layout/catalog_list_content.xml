<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/custom_background">

    <ImageView
        android:id="@+id/catalog_list_element_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_normal"
        android:src="@drawable/no_image"
        android:contentDescription="@string/catalog_list_element_image_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/catalog_list_element_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_normal"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimaryDark"
            tools:text="My name"/>
        <TextView
            android:id="@+id/catalog_list_element_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="end"
            tools:text="50 â‚¬"/>
    </LinearLayout>

</LinearLayout>